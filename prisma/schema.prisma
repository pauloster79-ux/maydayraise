generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shareholder {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  investorType String @map("investor_type") // Was Enum
  
  // Personal / Primary Contact Details
  firstName     String @map("first_name")
  lastName      String @map("last_name")
  email         String @unique
  phone         String?
  dateOfBirth   DateTime? @map("date_of_birth")
  
  // Joint Applicant Details
  secondaryName String? @map("secondary_name")
  
  // Organization Details
  organizationName String? @map("organization_name")
  organizationType String? @map("organization_type")
  companyNumber    String? @map("company_number")
  
  // Address
  addressLine1 String @map("address_line_1")
  addressLine2 String? @map("address_line_2")
  city         String
  postcode     String
  country      String

  // Relations
  applications Application[]
  messages     Message[]

  @@map("shareholders")
}

model Application {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  shareholderId String @map("shareholder_id")
  shareholder   Shareholder @relation(fields: [shareholderId], references: [id])

  amount Float
  shares Int // amount / 1

  status String @default("PENDING") // Was Enum
  
  isPaid Boolean @default(false) @map("is_paid")
  paidAt DateTime? @map("paid_at")
  
  paymentMethod    String? @map("payment_method") // Was Enum
  paymentReference String? @unique @map("payment_reference") // For bank transfers

  riskAcknowledgments String @map("risk_acknowledgments") // SQLite doesn't support JSON, store as String
  beneficiaryDetails  String? @map("beneficiary_details") // SQLite doesn't support JSON, store as String

  // Relations
  payments    Payment[]
  messages    Message[]
  certificate Certificate?

  @@map("applications")
}

model Payment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  applicationId String @map("application_id")
  application   Application @relation(fields: [applicationId], references: [id])

  amount Float
  paymentMethod String @map("payment_method") // Was Enum
  
  providerReference String? @unique @map("provider_reference") // External ID
  bankReference     String? @map("bank_reference") // Matches Application.paymentReference

  status      String @default("PENDING") // Was Enum
  confirmedAt DateTime? @map("confirmed_at")

  @@map("payments")
}

model Message {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  shareholderId String @map("shareholder_id")
  shareholder   Shareholder @relation(fields: [shareholderId], references: [id])

  applicationId String? @map("application_id") // Optional for backward compatibility/flexibility
  application   Application? @relation(fields: [applicationId], references: [id])

  content String @map("message_text") // limit 500
  
  displayPreference String @default("FIRST_NAME_ONLY") @map("display_name_preference") // Was Enum
  
  isVisible Boolean @default(true) @map("is_visible")
  
  deletedAt     DateTime? @map("deleted_at")
  deletedBy     String? @map("deleted_by")
  deletionReason String? @map("deletion_reason")

  @@map("messages")
}

model Certificate {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  applicationId String @unique @map("application_id")
  application   Application @relation(fields: [applicationId], references: [id])

  certificateNumber String @unique @map("certificate_number")
  issueDate         DateTime @map("issue_date")
  pdfLocation       String @map("pdf_location")

  @@map("certificates")
}

// NextAuth Models

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  Authenticator Authenticator[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  role String @default("user")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([userId, credentialID])
}

model Settings {
  id                String   @id @default(cuid())
  minRaiseAmount    Float    @default(0) @map("min_raise_amount")
  targetRaiseAmount Float    @default(0) @map("target_raise_amount")
  raiseEndDate      DateTime @map("raise_end_date")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("settings")
}
